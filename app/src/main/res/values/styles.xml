<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Style untuk teks BottomNavigationView saat aktif -->
    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#007AFF</item> <!-- Biru iOS untuk kontras dengan putih -->
    </style>

    <!-- Style untuk teks BottomNavigationView saat tidak aktif -->
    <style name="BottomNavTextInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#757575</item> <!-- Abu-abu untuk kontras dengan putih -->
    </style>
</resources>